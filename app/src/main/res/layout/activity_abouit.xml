<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/wallpaper">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_gravity="start|top"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="23dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/baseline_arrow_back_24"
            />

            <TextView
                android:id="@+id/titledescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="252dp"
                android:layout_marginBottom="28dp"
                android:text="About"
                android:textColor="@color/white"
                android:textSize="27sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NaviAlert"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <!-- Version -->
        <TextView
            android:id="@+id/versionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NaviAlert is a Police Assistance and Public Safety app designed to help users quickly and effectively contact emergency services and access public safety resources."
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- Developer Information -->


        <!-- Contact Information -->
        <TextView
            android:id="@+id/contactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us: support@navialert.com"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- Privacy Policy Link -->
        <TextView
            android:id="@+id/privacyPolicyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Terms of Service Link -->
        <TextView
            android:id="@+id/termsOfServiceLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Acknowledgments -->
        <TextView
            android:id="@+id/acknowledgments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acknowledgments: This app uses third-party libraries such as Retrofit and Glide."
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- Feedback Section -->
        <TextView
            android:id="@+id/feedbackInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback: We value your feedback! Please send your suggestions or report any issues at support@navialert.com."
            android:textSize="16sp"/>

        <!-- Stay Safe Message -->
        <TextView
            android:id="@+id/staySafeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Safe!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"/>
    </LinearLayout>
</ScrollView>